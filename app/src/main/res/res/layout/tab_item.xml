<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    >

    <me.goldze.mvvmhabit.widget.IconText
        android:id="@+id/tab_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xe8bc;"
        android:textSize="@dimen/icon_normal"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/marginVertical"
        />
    <TextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:text="菜单一"
        android:textSize="@dimen/text_nromal"
        app:layout_constraintTop_toBottomOf="@id/tab_icon"
        app:layout_constraintLeft_toLeftOf="@id/tab_icon"
        app:layout_constraintRight_toRightOf="@id/tab_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/marginVertical"
        />

</android.support.constraint.ConstraintLayout>