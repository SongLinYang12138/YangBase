<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="main_menu"
            type="com.bondex.ysl.bondex.base.main.MainMenuBean" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/menu_cl_conent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        >

        <TextView
            android:id="@+id/menu_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/marginVertical"
            android:text="@string/app_name"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            style="@style/tv_large_gray"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/menu_item_tv_name"
           android:layout_marginTop="@dimen/marginVertical"
            />
    </android.support.constraint.ConstraintLayout>

</layout>