<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="welcome" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/flash</item>
    </style>
    <style name="bt_login" parent="Base.Widget.AppCompat.Button">

        <item name="background">@drawable/bt_login_selector</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_normal_gray">

        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="tv_large_gray">

        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="tv_small_gray">

        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>


    <style name="tv_title">

        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_black</item>
    </style>






</resources>
